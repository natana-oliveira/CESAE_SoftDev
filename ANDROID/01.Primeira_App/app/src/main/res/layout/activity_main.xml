 <EditText
     android:id="@+id/edit_primeiroNome"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_marginTop="224dp"
     android:ems="10"
     android:hint="Insira seu primeiro nome"
     android:inputType="text"
     app:layout_constraintEnd_toEndOf="parent"
     app:layout_constraintStart_toStartOf="parent"
     app:layout_constraintTop_toTopOf="parent" />

 <EditText
     android:id="@+id/edit_segundoNome"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_marginTop="12dp"
     android:ems="10"
     android:hint="Insira seu segundo nome"
     android:inputType="text"
     app:layout_constraintStart_toStartOf="@+id/edit_primeiroNome"
     app:layout_constraintTop_toBottomOf="@+id/edit_primeiroNome" />

 <Button
     android:id="@+id/button_ola"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_marginTop="15dp"
     android:text="Dizer Olá!"
     app:layout_constraintEnd_toEndOf="parent"
     app:layout_constraintStart_toStartOf="parent"
     app:layout_constraintTop_toBottomOf="@+id/edit_segundoNome" />

 <TextView
     android:id="@+id/text_resultado"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_marginStart="192dp"
     android:layout_marginTop="35dp"
     android:layout_marginEnd="192dp"
     android:text="..."
     android:textSize="34sp"
     app:layout_constraintEnd_toEndOf="parent"
     app:layout_constraintStart_toStartOf="parent"
     app:layout_constraintTop_toBottomOf="@+id/button_ola" />
